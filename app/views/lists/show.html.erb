<p id="notice"><%= notice %></p>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path(@list.photo.key,
      width: 400, height: 300, crop: :fill) %>');">
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<%= link_to 'Add Bookmark', new_list_bookmark_path(@list) %>

<h4>Bookmarks</h2>


<% @list.bookmarks.each do |bookmark| %>
  <div class="card" style="width: 18rem;">
    <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="MOvie Poster">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
      <p class="card-text"><%= bookmark.movie.overview %></p>
      <h5>Comments</h5>
      <p class="card-text"><%= bookmark.comment %></p>
        <%= link_to 'Delete', bookmark_path(bookmark),
                      method: :delete,
                      data: { confirm: 'Are you sure?' }, class: "btn btn-secondary"
        %>
    </div>
  </div>
<% end %>
